# https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
max_line_length = 80

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yaml,yml}]
indent_size = 2

[*.{kt,kts}]
indent_size = 2
ij_kotlin_packages_to_use_import_on_demand = unset
ij_kotlin_name_count_to_use_star_import = 65535
ij_kotlin_name_count_to_use_star_import_for_members = 65535
